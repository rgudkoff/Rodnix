# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,h}]
indent_style = space
indent_size = 4

[*.{S,s}]
indent_style = space
indent_size = 4

[*.{ld,Makefile,makefile}]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{json,toml,yaml,yml}]
indent_style = space
indent_size = 2

